<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Settings"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/app_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="40dp"
        android:text="App Theme"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/settings_title"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/d_theme_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Dark"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@+id/theme_switch"
        app:layout_constraintBottom_toBottomOf="@+id/theme_switch"
        app:layout_constraintEnd_toStartOf="@+id/theme_switch" />

    <Switch
        android:id="@+id/theme_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/app_label"
        app:layout_constraintEnd_toStartOf="@+id/l_theme_label"
        tools:ignore="UseSwitchCompatOrMaterial3" />

    <TextView
        android:id="@+id/l_theme_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="Light"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@+id/theme_switch"
        app:layout_constraintBottom_toBottomOf="@+id/theme_switch"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/notifications_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:text="Notification Settings"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/app_label"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cancel_notify_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Receive notifications when your booking is amended or cancelled?"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/notifications_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancel_notify_switch" />

    <Switch
        android:id="@+id/cancel_notify_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/cancel_notify_label"
        app:layout_constraintBottom_toBottomOf="@+id/cancel_notify_label"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="UseSwitchCompatOrMaterial3" />

    <TextView
        android:id="@+id/book_status_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:text="Receive notifications when the status of your reservation changes?"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/cancel_notify_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/notification_status_switch" />

    <Switch
        android:id="@+id/notification_status_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        app:layout_constraintTop_toTopOf="@+id/book_status_label"
        app:layout_constraintBottom_toBottomOf="@+id/book_status_label"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="UseSwitchCompatOrMaterial3" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/low_nav"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?android:attr/windowBackground"
        app:itemActiveIndicatorStyle="@null"
        app:itemHorizontalTranslationEnabled="false"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/nav_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>
