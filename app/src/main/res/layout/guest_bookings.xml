<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookings_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F6"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/bookings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_marginTop="48dp"
        android:text="Your Bookings"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />


      <TextView
        android:id="@+id/booking_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="XX-XX-XXXX"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookings_title" />


    <TextView
        android:id="@+id/booking_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="16:00"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/booking_date"  />

    <Button
         android:id="@+id/amend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Amend"
        android:textSize="14sp"
        android:backgroundTint= "#42A5F5"
        app:layout_constraintBottom_toTopOf="@+id/cancel_btm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/booking_date"
        app:layout_constraintVertical_chainStyle="packed" />


    <Button
         android:id="@+id/cancel_btm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Cancel"
        android:textSize="14sp"
        android:backgroundTint="#42A5F5"
        app:layout_constraintBottom_toBottomOf="@id/booking_time"
        app:layout_constraintEnd_toEndOf="@id/amend_btn"
        app:layout_constraintStart_toStartOf="@id/amend_btn"
        app:layout_constraintTop_toBottomOf="@+id/amend_btn" />


      <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/low_nav"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?android:attr/windowBackground"
        app:itemHorizontalTranslationEnabled="false"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/nav_bar" />

  </androidx.constraintlayout.widget.ConstraintLayout>
